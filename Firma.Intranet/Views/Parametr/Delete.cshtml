@model Firma.Data.Models.CMS.CMSParametr
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Parametr</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wartosc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wartosc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
    </dl>
    <div class="col-md-12 text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdParametru" />
        </form>
    </div>
</div>
<a asp-action="Index" class="btn btn-outline-success">Powrót</a>
<button class="btn btn-outline-success" onclick="document.getElementById('id01').style.display='block'">Usuń</button>

<div id="id01" class="modal">
    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
    <form class="modal-content" asp-action="Delete">
        <div class="container">
            <h4 class="text-center">Czy na pewno chesz usunąć ten parametr?</h4>
            <div class="col-md-12 text-center">
                <input type="submit" value="Usuń" class="btn btn-outline-success" />
            </div>
        </div>
    </form>
</div>
